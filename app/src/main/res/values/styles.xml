<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Overcooked.Body1" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:textAppearance">@style/TextAppearance.Overcooked.Body1</item>
    </style>

    <!-- Button -->

    <style name="Widget.Overcooked.Button.Elevated" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.Overcooked.View.Divider" parent="">
        <item name="android:background">@color/lightBackground</item>
    </style>


</resources>
